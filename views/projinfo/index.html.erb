<!--
  Projinfo ERB template
  Expectes res_list (a list) of quota objects.
-->
<table class = "table table-striped table-condensed dataTable no-footer">
<tr>
  <th>Project</th>
  <th>Used[h]</th>
  <th>Allocated[h]</th>
  <th>Queue</th>
</tr>
<% @user_projects.each do |project| %>
<tr>
  <td><%= project["project"] %></td>
  <td><%= project["used"].to_f.round(2) %></td>
  <td><%= project["allocated"] %></td>
  <td><%= project["queue"] %></td>
</tr>
<% project["users"].each do |user| %>
<tr>
  <td style = "padding-left: 2em"><%= user["username"] %></td>
  <td><%= user["used"].to_f.round(2) %></td>
</tr>
<%end%>
<%end%>
</table>
